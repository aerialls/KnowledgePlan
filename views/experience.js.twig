{# This file represents the simulation #}

var experience = new Object();
experience.simulations = new Object();

experience.options = {{ experience.options|json_encode|raw }};
experience.step = {{ experience.step }};
experience.minTime = {{ experience.minTime }};
experience.maxTime = {{ experience.maxTime }};

{% for name,simulation in experience.simulations %}
{% spaceless %}
    experience.simulations["{{ name }}"] = {
        "options": {{ simulation.options|json_encode|raw }},
        "plots": {{ simulation.plots|json_encode|raw }},
        "step": {{ simulation.step }},
        "min_time": {{ simulation.minTime }},
        "max_time": {{ simulation.maxTime }},
        "informations": {{ simulation.informations|json_encode|raw }}
    };
{% endspaceless %}
{% endfor %}